@model Telerik_Project15.Models.DashboardViewModel

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml"; // Use the Dashboard layout
}
<h2>Dashboard</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>Bar Chart</h3>
            @(Html.Kendo().Chart()
                .Name("barChart")
                .Title("Bar Chart")
                .Legend(legend => legend.Visible(false))
                .Series(series =>
                {
                    series.Column(model.BarChartData);
                })
                .CategoryAxis(axis => axis.Categories(new[] { "Category 1", "Category 2", "Category 3", "Category 4", "Category 5" }))
            )
        </div>
        <div class="col-md-6">
            <h3>Line Chart</h3>
            @(Html.Kendo().Chart()
                .Name("lineChart")
                .Title("Line Chart")
                .Legend(legend => legend.Visible(false))
                .Series(series =>
                {
                    series.Line(model.LineChartData);
                })
                .CategoryAxis(axis => axis.Categories(new[] { "Category 1", "Category 2", "Category 3", "Category 4", "Category 5" }))
            )
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h3>Table</h3>
            @(Html.Kendo().Grid(model.TableDataList)
                .Name("grid")
                .Columns(columns =>
                {
                    columns.Bound(data => data.Name).Title("Name");
                    columns.Bound(data => data.Value).Title("Value");
                })
                .Pageable()
            )
        </div>
    </div>
</div>