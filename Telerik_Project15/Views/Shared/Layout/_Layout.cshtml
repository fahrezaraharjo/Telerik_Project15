<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - My Telerik MVC Application</title>
    <!-- Include jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Include Kendo UI scripts and styles -->
    <link href="https://kendo.cdn.telerik.com/themes/6.4.0/default/default-purple.css" rel="stylesheet" type="text/css" />
    <link href="https://kendo.cdn.telerik.com/themes/6.4.0/common/common.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.kendostatic.com/2023.2.829/js/jszip.min.js"></script>
    <script src="https://cdn.kendostatic.com/2023.2.829/js/kendo.all.min.js"></script>
    <link href="@Url.Content("~/Content/css/custom.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/Carousel.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />

</head>
<body class="k-content">
    <main>
        <div class="container-fluid">
            @RenderBody()
        </div>
    </main>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2021.3.1207/js/kendo.all.min.js"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script>
        $(document).ready(function () {
            $('.read-more').on('click', function (e) {
                e.preventDefault();
                var descriptionContainer = $(this).closest('.description-container');
                descriptionContainer.find('.description').css('max-height', 'none');
                $(this).hide();
            });
        });
    </script>
    @RenderSection("scripts", required: false)

</body>
</html>
